{
    "name": "Bonfire Next",
    "description": "The Modern Kickstart for CodeIgniter Applications",
    "version": "1.0.0-dev",
    "homepage": "http://cibonfire.com",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Bonfire\\": ["bonfire/libraries/", "bonfire/interfaces/" ]
        }
    },
    "authors": [
        {
            "name": "Lonnie Ezell",
            "email": "lonnieje@gmail.com",
            "homepage": "http://lonnieezell.com",
            "role": "Project Lead"
        }
    ],
    "support": {
        "forum": "http://forums.cibonfire.com/"
    },
    "require": {
        "php": ">=5.3.14",
        "lonnieezell/codeigniter-forensics": "dev-master",
        "league/plates": "2.*",
        "kriswallsmith/assetic": "1.2.*@dev",
        "monolog/monolog": "1.9.*@dev",
        "ci-bonfire/assets": "dev-develop",
        "cssmin/cssmin": "*",
        "mrclay/minify": "*"
    },
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/lonnieezell/codeigniter-forensics"
        },
        {
            "type": "package",
            "package": {
                "name": "cssmin/cssmin",
                "version": "3.0.1",
                "dist": { "url": "http://cssmin.googlecode.com/files/cssmin-v3.0.1.php", "type": "file" },
                "autoload": { "classmap": [ "cssmin-v3.0.1.php" ] }
            }
        }
    ]
}